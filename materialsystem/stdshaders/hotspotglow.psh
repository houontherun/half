;------------------------------------------------------------------------------
; Draw a texture . . woo hoo!
; t0 - texture
;
; The texture coordinates need to be defined as follows:
; tc0 - texcoords
;------------------------------------------------------------------------------

; Get the color from the texture
tex t0
tex t1
tex t2
tex t3

mov r0, t0
add_d2 r0, r0, t1
mov r1, t2
add_d2 r1, r1, t3
add_d2 r0, r0, r1
mov r0.a, c2


